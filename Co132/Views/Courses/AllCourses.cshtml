@model IEnumerable<Course>
@{
    ViewData["Title"] = "AllCourses";
}

<h1>AllCourses</h1>
<a asp-action="AddNewCourse" asp-controller="Courses" class="btn btn-success">Create New Course</a>
@if (Model.Count() != 0)
{
    

<table class="table table-bordered table-hover">
    <tr>
        <td>Course Name</td>
        <td>Price</td>
        <td>Operations</td>
    </tr>
    @foreach (var course in Model)
    {
        <tr>
            <td>@course.CourseName</td>
            <td>@course.Price</td>
            <td><a asp-action="Derails"
                asp-controller="Courses"
                class="btn btn-primary" 
                asp-route-id="@course.CourseId" >
                More Detail</a>
                <a asp-action="Delete"
                   asp-controller="Courses"
                   class="btn btn-danger"
                   asp-route-id="@course.CourseId">
                    Delete
                </a>
            </td>
        </tr>
    }
</table>
}
else{
    <h1>there is no data in the Course</h1>
}